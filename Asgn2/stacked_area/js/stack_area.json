{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1000, 
  "height": 500,
  "title": "Proportion of Shootings per Ethnicity",
  "data": {"url": "https://raw.githubusercontent.com/davo12312/FIT3179/main/Asgn2/stacked_area/data/race_proportion.csv"},
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Date",
      "type": "ordinal",
      "sort": {"field": "index"}
    },
    "y": {
      "aggregate": "sum", 
      "field": "Count",
      "title": "Number of Shootings"
    },
    "color": {
      "field": "Race",
      "type":"nominal",
      "scale": {"scheme": "tableau10"}
    },
    "tooltip": [
      {"field": "Race", "title": "Ethnicity"},
      {"field": "Date", "title": "Month/Year"},
      {"field": "Count", "title": "Shootings"}
    ]
  }
}
