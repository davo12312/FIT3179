{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "height": 400,
  "width": 500,
  "title": "Average Police Shootings in USA 2015 - 2020",
  "data": {"url": "https://raw.githubusercontent.com/davo12312/FIT3179/main/Asgn2/interactive_graph/data/state_pop.csv"},
  "params": [
     {
      "name": "Population_Above",
      "value": 0,
      "bind": {
      "input": "range",
      "min": 0,
      "max": 16000000,
      "step": 1000000,
      "name": "Minimum Population: "
      }
    }
 ],
   "transform": [
      {"filter": "datum.Population > Population_Above"}
   ],
  "selection": {
      "continent_highlight": {
      "type": "multi",
      "fields": ["Race"],
      "bind": "legend"
      }
  },
  "mark": {"type": "circle"},
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "title": "Ethnicity Population",
      "scale": {"domain": [0, 16000000]}
    },
    "y": {
      "field": "Shootings per capita", 
      "type": "quantitative",
      "title": "Number of Shootings",
      "scale": {"domain": [0, 3.5]}
    },
    "color": {
      "field": "Race",
      "type": "nominal",
      "scale": {
        "domain": [
          "Asian",
          "Black",
          "Hispanic",
          "Native",
          "White"
        ],
        "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#a6cee3",
          "#377eb8"
        ]
      }
    },
    "opacity": {
        "condition": {"selection": "continent_highlight", "value": 0.8},
        "value": 0.1
    },
    "size": {
      "field": "Population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [1000000, 10000000],
        "range": [50, 100, 150]
      },
      "legend": {"format": ".1s"}
    },
    "tooltip": [
      {"field": "State", "title": "State"},
      {"field": "Race", "title": "Ethnicity"},
      {"field": "Population", "title": "Ethnicity Population in State", "format": ","},
      {"field": "State Population", "title": "Total State Population", "format": ","},
      {"field": "Shootings per capita", "title": "Shootings per Capita", "format": ".2f"}
    ]
  }
}

