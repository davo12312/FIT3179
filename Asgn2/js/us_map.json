{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "US Police Shootings (2015 - 2020)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/davo12312/FIT3179/main/Asgn2/js/us_states.json",
    "format": {
          "type": "topojson",
          "feature": "us_states"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/davo12312/FIT3179/main/Asgn2/data/state_shootings.csv"
        },
        "key": "State",
        "fields": ["shootings"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "shootings",
      "type": "quantitative",
      "scale": {"scheme": "reds"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "State"},
      {"field": "shootings", "type": "quantitative"}
    ]
  }
}
